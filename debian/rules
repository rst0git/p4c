#!/usr/bin/make -f

DH_VERBOSE = 1

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure --builddirectory=build/ -- \
		-DCMAKE_BUILD_TYPE=RELEASE \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DENABLE_BMV2=ON \
		-DENABLE_EBPF=ON \
		-DENABLE_UBPF=ON \
		-DENABLE_DPDK=ON \
		-DENABLE_P4C_GRAPHS=ON \
		-DENABLE_P4TEST=ON \
		-DENABLE_DOCS=OFF \
		-DENABLE_GC=ON \
		-DENABLE_GTESTS=OFF \
		-DENABLE_PROTOBUF_STATIC=ON \
		-DENABLE_MULTITHREAD=OFF \
		-DENABLE_GMP=ON


override_dh_auto_install:
	dh_auto_install --builddirectory=build/ -- DESTDIR=$(CURDIR)/ install
